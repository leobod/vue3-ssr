{
  "name": "vue3-ssr",
  "private": true,
  "version": "0.0.0",
  "scripts": {
    "dev:client": "webpack --watch --config webpack/dev.client.config.js",
    "dev:server": "webpack --watch --config webpack/dev.server.config.js",
    "dev:run": "nodemon ./server.js",
    "build:client": "webpack --config webpack/prod.client.config.js",
    "build:server": "webpack --config webpack/prod.server.config.js",
    "build": "npm run build:client && npm run build:server",
    "prod:run": "npm run build && node ./server.js"
  },
  "dependencies": {
    "@element-plus/icons-vue": "^2.3.1",
    "@vue/server-renderer": "^3.4.27",
    "axios": "^1.6.8",
    "element-plus": "^2.7.3",
    "koa": "^2.15.3",
    "koa-bodyparser": "^4.4.1",
    "koa-connect": "^2.1.0",
    "koa-mount": "^4.0.0",
    "koa-router": "^12.0.1",
    "koa-send": "^5.0.1",
    "koa-static": "^5.0.0",
    "vue": "^3.4.21",
    "vue-router": "^4.3.2",
    "vuex": "^4.0.2",
    "webpack": "^5.69.0",
    "webpack-cli": "^4.9.2",
    "webpack-dev-server": "^4.7.4",
    "webpack-merge": "^5.8.0"
  },
  "devDependencies": {
    "@babel/core": "^7.17.4",
    "@babel/plugin-transform-runtime": "^7.17.0",
